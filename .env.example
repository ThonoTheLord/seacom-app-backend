# Database Configuration (matches docker-compose defaults)
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=experimental123
DB_PORT=5433
DB_NAME=seacom_experimental_db

# Security Configuration
JWT_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=replace_with_secure_random_key_at_least_32_chars
JWT_ALGORITHM=HS256

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Presence Backend
# db | redis
PRESENCE_BACKEND=db
REDIS_URL=redis://localhost:6379/0
PRESENCE_REDIS_TTL_SECONDS=300
PRESENCE_PUBSUB_CHANNEL=presence_events
PRESENCE_REDIS_CONNECT_TIMEOUT_SECONDS=5
PRESENCE_REDIS_SOCKET_TIMEOUT_SECONDS=5
PRESENCE_REDIS_RETRY_COOLDOWN_SECONDS=60

# SMTP / Email (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_NAME=SAMO NOC
SMTP_USE_TLS=true
NOC_EMAIL_ADDRESSES=

# Supabase Storage (optional)
SUPABASE_URL=
SUPABASE_SERVICE_KEY=
SUPABASE_STORAGE_BUCKET=attachments
